// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id      Int      @default(autoincrement()) @id
  email   String   @unique
  name    String?
  valid   Boolean?
  password String?
  contrat Contract[]
  notification Notification[]
  biling Biling[]
  projet Porjet[]

}

model Contract {
  id      Int      @default(autoincrement()) @id
  number  Int      @unique
  name    String?
  valid   Boolean?
  start_date DateTime
  end_date DateTime
  user User @relation(fields: [userId], references:[id])
  userId Int
}


model Notification {
  id      Int      @default(autoincrement()) @id
  name    String?
  description   String?
  seen  Boolean?
  user User @relation(fields: [userId], references:[id])
  userId Int
}

model Biling {
  id      Int      @default(autoincrement()) @id
  number    Int?   @unique
  description   String?
  date  DateTime?
  user User @relation(fields: [userId], references:[id])
  userId Int
}

model Porjet {
  id      Int      @default(autoincrement()) @id
  number    Int?   @unique
  description   String?
  start_date  DateTime?
  end_date DateTime?
  user User @relation(fields: [userId], references:[id])
  userId Int
  task Task?
  mockup MockUp?
}

model MockUp {
  id      Int      @default(autoincrement()) @id
  name    String? 
  path   String?
  projet Porjet @relation(fields: [projetId], references:[id])
  projetId Int
}


model Task {
  id      Int      @default(autoincrement()) @id
  name    String?
  description   String?
  archived Boolean?
  start_date  DateTime?
  end_date DateTime?
  projet Porjet @relation(fields: [projetId], references:[id])
  projetId Int
 
}
